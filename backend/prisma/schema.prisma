generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Profile {
  id          Int      @id @default(autoincrement())
  firstName   String
  dateOfBirth DateTime
  city        String
  country     String
  latitude    Float
  longitude   Float
  userId      String      @unique

  @@index(userId)
}

model Event {
  id                  Int      @id @default(autoincrement())
  name                String
  location            String   // We'll store this as a string for now
  latitude            Float
  longitude           Float
  date                DateTime
  description         String
  imageUrl            String?
  spotifyPlaylistUrl  String?
  userId              String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([latitude, longitude])
  @@index(userId)
}